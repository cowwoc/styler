<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- Console appender for test output -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- Root logger set to WARN to reduce test noise -->
	<root level="WARN">
		<appender-ref ref="CONSOLE"/>
	</root>

	<!-- Application loggers can be configured here if needed -->
	<!-- Example: <logger name="io.github.cowwoc.styler" level="DEBUG"/> -->
</configuration>
