{
  "env": {
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "true",
    "DISABLE_AUTOUPDATER": "true"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/echo-session-id.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/check-lock-ownership.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/protocol-and-role-reminder.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/todo-context-reminder.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/critical-thinking.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/reset-javadoc-warning.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/state-transition-detector.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/phase-transition-guide.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/phase-guard-enforcement.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/enforce-checkpoints.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/cleanup-verification.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/validate-git-status-on-transition.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/detect-giving-up.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/verify-destructive-operations.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/smart-doc-prompter.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/critical-thinking.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/block-data-loss.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/detect-worktree-violation.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/enforce-merge-workflow.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/enforce-commit-squashing.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/enforce-checkpoints.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/validate-git-filter-branch.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/verify-convergence-entry.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/enforce-requirements-phase.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/require-task-protocol.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/implementation-guard.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/block-retrospective-docs.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/validate-state-transition.sh"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/task-invoke-pre.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/validate-agent-invocation.sh"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/load-todo.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "(tool:Write || tool:Edit) && path:**.java",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/write-java-validation.sh"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/auto-learn-from-mistakes.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/detect-assistant-giving-up.sh"
          }
        ]
      },
      {
        "matcher": "tool:Bash && command:*git*merge*--squash*",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/enforce-post-merge-cleanup.sh"
          }
        ]
      },
      {
        "matcher": "tool:Task",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/task-invoke-post.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/task-complete.sh"
          }
        ]
      },
      {
        "matcher": "(tool:Write || tool:Edit || tool:MultiEdit) && path:docs/",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/verify-doc-sync.sh"
          },
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/detect-meta-commentary.sh"
          }
        ]
      },
      {
        "matcher": "(tool:Edit && path:todo.md) || (tool:Edit && path:changelog.md)",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/verify-task-archival.sh"
          }
        ]
      },
      {
        "matcher": "tool:Read || tool:Glob || tool:Grep || tool:WebFetch || tool:WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/detect-sequential-tools.sh"
          }
        ]
      },
      {
        "matcher": "tool:Edit && path:**/task.json",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/hooks/measure-phase-metrics.sh"
          }
        ]
      }
    ]
  },
  "model": "sonnet",
  "statusLine": {
    "type": "command",
    "command": "/workspace/.claude/statusline-command.sh"
  },
  "cleanupPeriodDays": 7
}
